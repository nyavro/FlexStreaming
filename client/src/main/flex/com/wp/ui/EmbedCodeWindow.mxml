<?xml version="1.0"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx"
                xmlns:s="library://ns.adobe.com/flex/spark"
                width="400" height="400" close="closeWindow();" title="Embed code">
    <fx:Script>
  <![CDATA[
        import mx.managers.PopUpManager;

        [Bindable]
        public var embedCode:String = "";

        public function closeWindow():void {
            PopUpManager.removePopUp(this);
        }
        ]]>
  </fx:Script>
    <s:VGroup width="100%">
        <mx:Label text="Embed code"></mx:Label>
        <mx:TextArea text="{embedCode}" width="100%" height="300"></mx:TextArea>

        <mx:Button label="Close" horizontalCenter="true"
                   width="80" click="closeWindow()"/>

    </s:VGroup>

</mx:TitleWindow>
